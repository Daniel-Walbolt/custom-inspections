<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1275px"
    android:layout_height="1650px"
    android:padding="20px"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View style="@style/Divider"
                android:layout_centerInParent="true"
                android:background="@color/WR_orange_dark"/>

            <TextView
                android:id="@+id/module_chapter_title"
                style="@style/PDF_Heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/orange_border_view"
                android:padding="15px"
                android:text="System 1 - Main System" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:background="@drawable/orange_border_view"
            android:layout_margin="20px"
            android:paddingStart="20px"
            android:paddingEnd="20px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/PDF_InformationText"
                android:layout_weight="1"
                android:gravity="center"
                android:text="# High Priority Defects"
                android:id="@+id/module_chapter_hp_defects"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/PDF_InformationText"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="# Total Defects"
                android:id="@+id/module_chapter_all_defects"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/PDF_InformationText"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="# Restrictions"
                android:id="@+id/module_chapter_restrictions"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="1200px"
            android:layout_height="100px"
            android:id="@+id/module_chapter_tags"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <!-- Display the attributes of the system here. Excluded, Quality of Residence, Complete, Partially complete.-->


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Table of Defects"
            style="@style/PDF_Subheading"/>

        <View
            style="@style/Divider"
            android:layout_width="450px"
            android:background="@color/WR_orange_dark"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:id="@+id/module_chapter_defect_table"
            android:layout_width="1200px"
            android:layout_height="1200px"
            android:gravity="center_horizontal"
            android:orientation="vertical" />

    </LinearLayout>


</RelativeLayout>