<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="10px">

    <TextView
        android:layout_width="50px"
        android:layout_height="wrap_content"
        style="@style/PDF_Subheading"
        android:text="1"
        android:gravity="center"
        android:id="@+id/module_comment_index"
        android:layout_gravity="center_vertical"/>

    <View style="@style/VertDivider"
        android:background="@color/WR_orange_dark"
        android:layout_marginRight="10px"/>

    <TextView
        android:layout_width="1000px"
        android:layout_height="wrap_content"
        style="@style/PDF_InformationText"
        android:text="This is a sample commment with \n multiple lines \n \n \n"
        android:id="@+id/module_comment_text"/>

</LinearLayout>