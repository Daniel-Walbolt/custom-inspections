<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp"
    android:orientation="vertical">

    <!-- The second version of a numeric is a slightly different layout.
    Instead of the numeric being optional, it is always visible. There is no checkbox. -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/InformationText"
            android:ellipsize="end"
            android:maxLines="1"
            android:textStyle="bold"
            android:id="@+id/info_item_title"
            android:text="Category Item Name"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/info_item_numeric_content"
        android:layout_marginLeft="5dp">

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="Type here"
            android:inputType="number"
            android:maxLength="9"
            android:id="@+id/info_item_numeric_input"
            style="@style/InformationText"
            android:layout_marginLeft="5dp"
            android:background="@drawable/text_field_underline_background"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/InformationText"
            android:id="@+id/info_item_numeric_unit"
            android:text="Unit"/>

    </LinearLayout>



</LinearLayout>