<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/recycler_image_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:orientation="vertical"
    android:background="@drawable/recycler_media_background"
    android:padding="2dp">

    <ImageView
        android:id="@+id/recycler_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:maxWidth="243dp"
        android:maxHeight="137dp"
        android:adjustViewBounds="true"/>

    <View style="@style/Divider"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">


        <Button
            android:id="@+id/recycler_image_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/InformationText"
            android:text="Comment"/>

        <View style="@style/VertDivider"/>

        <Button
            android:id="@+id/recycler_image_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove"
            style="@style/InformationText"/>

    </LinearLayout>



</LinearLayout>