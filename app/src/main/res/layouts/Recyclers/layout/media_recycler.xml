<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/recycler_image_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:padding="1dp"
    android:background="@drawable/recycler_media_background"
    android:layout_marginRight="10dp">

    <!--  The layout_marginRight here is to space this image out from a second image. -->

    <ImageView
        android:id="@+id/recycler_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:maxWidth="243dp"
        android:maxHeight="137dp"
        android:adjustViewBounds="true"/>

    <View style="@style/Divider"/>

    <ImageButton
        android:id="@+id/recycler_image_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/comment_icon"
        android:background="@color/transparent"/>


    <View style="@style/VertDivider"/>

    <ImageButton
        android:id="@+id/recycler_image_remove"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@color/transparent"
        android:src="@drawable/remove_icon"
        style="@style/InformationText"/>


</RelativeLayout>