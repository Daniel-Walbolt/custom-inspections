<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/dialog_upload_progressContent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/dialog_orange_border"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView style="@style/HeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/contrastColor"
        android:textSize="20sp"
        android:text="Progress"/>

    <ProgressBar
        android:id="@+id/dialog_upload_progressBar"
        android:layout_width="300dp"
        android:layout_margin="10dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/progress_bar"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/dialog_upload_progressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textColor="@color/contrastColor"
        android:textSize="14sp"
        android:text="0%"/>

</LinearLayout>
