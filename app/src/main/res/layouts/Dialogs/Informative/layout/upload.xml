<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_orange_border"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/dialog_upload_confirmation_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            style="@style/HeaderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="5dp"
            android:text="Are you sure you want to upload?"/>

        <TextView
            style="@style/InformationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/gray_unfocused"
            android:text="Depending on the amount of data,\nthis may take awhile.\n\nMake sure you have stable internet."/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="15dp">

            <Button
                android:id="@+id/dialog_upload_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:text="Confirm"
                style="@style/Subheading"
                android:textColor="@color/contrastColor"
                android:layout_marginStart="10dp"/>

            <Button
                android:id="@+id/dialog_upload_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Subheading"
                android:textColor="@color/contrastColor"
                android:background="@color/transparent"
                android:text="Cancel"/>



        </LinearLayout>

    </LinearLayout>

</RelativeLayout>